<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewpager2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_50sdp"
        android:backgroundTint="#FA4E4E"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.example.animatedbottombar.bubbleTabBarView.BubbleTabBar
            android:id="@+id/bubbleTabBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_16sdp"
            android:padding="@dimen/_5sdp"
            app:bubbletab_icon_padding="@dimen/_5ssp"
            app:bubbletab_icon_size="@dimen/_18sdp"
            app:bubbletab_disabled_icon_color="@color/white"
            app:bubbletab_menuResource="@menu/menu_list"
            app:bubbletab_tab_corner_radius="@dimen/_50sdp"
            app:bubbletab_title_size="@dimen/_13sdp"
            app:bubbletab_horizontal_padding="@dimen/_15sdp"
            app:bubbletab_vertical_padding="@dimen/_8sdp" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>